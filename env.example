# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (if using direct PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/warehouse_db

# Application Configuration
NEXT_PUBLIC_APP_NAME="Al-Rafidain Warehouse System"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_DEFAULT_LANGUAGE="en"

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# File Upload Configuration (if needed)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Barcode Configuration
NEXT_PUBLIC_BARCODE_BASE_URL=http://localhost:3000/api/barcode

# Reporting Configuration
NEXT_PUBLIC_REPORT_EXPORT_FORMATS=pdf,excel,csv
NEXT_PUBLIC_REPORT_MAX_ROWS=10000

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=true
